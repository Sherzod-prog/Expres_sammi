<div class="w-75 mx-auto">
  <p class="fs-1">Edit product {{product.title}}</p>
  {{!-- {{#if errorAddProduct}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong>Error!</strong>
      {{errorAddProduct}}
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
  {{/if}} --}}
  <form action="/edit-product/{{product._id}}" method="post">
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        name="title"
        id="floatingInput"
        placeholder="Title"
        value={{product.title}}
      />
      <label for="floatingInput">Title</label>
    </div>
    <div class="form-floating mb-3">
      <textarea
        class="form-control"
        name="description"
        id="floatingTextarea2"
        placeholder="Description"
        style="height: 20vh"
      >{{product.description}}</textarea>
      <label for="floatingTextarea2">Description</label>
    </div>

    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        name="image"
        id="floatingInput"
        placeholder="Image"
        value={{product.image}}
      />
      <label for="floatingInput">Image</label>
    </div>

    <div class="input-group mb-3">
      <span class="input-group-text">$</span>
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          name="price"
          id="floatingInputGroup1"
          placeholder="Price"
          value={{product.price}}
        />
        <label for="floatingInputGroup1">Price</label>
      </div>
    </div>

    <button class="btn btn-primary mt-3 text-uppercase">save</button>
  </form>
</div>