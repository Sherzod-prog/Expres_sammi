{{#if products.length}}
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each products}}
      <div class="col">
        <div class="card shadow-sm">
          <img
            src={{image}}
            class="img-thumbnail product-image"
            style="max-width: 18rem"
          />
          <div class="card-body">
            <div class="card-text fw-bold">{{title}}</div>
            <div class="d-flex justify-content-between align-items-center">
              <p class="p-0 m-0">{{formatDate createdAt}}</p>
              <small class="text-muted fs-5">{{price}}.00 $</small>
            </div>
          </div>
          <div class="card-footer">
            <div
              class="btn-group btn-group-sm"
              role="group"
              aria-label="Basic example"
            >
              <a
                type="button"
                class="btn btn-outline-primary"
                href="/product/{{_id}}"
              >Detail</a>
              {{#if @root.token}}

                {{#ifequal user @root.userId}}
                  <a
                    type="button"
                    href="/edit-product/{{_id}}"
                    class="btn btn-outline-secondary"
                  >Edit</a>
                  <form
                    action="/delete-product/{{_id}}"
                    method="post"
                    class="m-0 btn btn-outline-danger"
                  >
                    <button type="submit" class="delete-btn">Delete</button>
                  </form>
                {{/ifequal}}
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>No product</p>
{{/if}}